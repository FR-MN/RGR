@model IEnumerable<ArtAlbum.UI.Web.Models.ImageVM>
@{var list = @Model.ToList();
    int count = @Model.ToList().Count;}
@functions {
    string GetLikeState(Guid imageId)
    {
        if (ArtAlbum.UI.Web.Models.ImageVM.IsImageLikedByUser(ArtAlbum.UI.Web.Models.UserVM.GetUserIdByNickname(User.Identity.Name), imageId))
        {
            return "Не нравится";
        }
        return "Нравится";
    }
    string GetUserName(Guid imageId)
    {
      return  ArtAlbum.UI.Web.Models.ImageVM.GetUserByImageId(imageId).First().Nickname;
    }
}
@{


    for (int i = 0; i < @count; i++)
    {
        <div class="col-md-4">
            <div class="block">
                <a class="show-image" data-toggle="modal" data-target="#@list[i].Id">
                    <img src="@Url.Action("GetResizedImage", "Images", new { id = list[i].Id, newWidth = 250, maxHeight = 250 })" class="img-responsive">
                </a>
            </div>


            <!-- Modal -->
            <div class="modal fade" id="@list[i].Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">

                    @if (@i < @count - 1)
                    {
                        <a  data-toggle="modal" class="nivo-lightbox-next" data-target="#@list[i + 1].Id" style="display: inline;"value="#@list[i].Id"  name="nextimage"></a>
                        

                    }
                    @if (@i > 0)
                    {
                        <a data-toggle="modal" class="nivo-lightbox-prev" data-target="#@list[i - 1].Id"style="display: inline;"value="#@list[i].Id" name="previmage"></a>
                       
                    }
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
                       
                    </div>
                    <div class="modal-content">
                       
                        <div class="row">
                            <div class="col-md-8">

                                <div class="top_image">

                                </div>
                                <button href="#" class="delete">Удалить фотографию</button>
                            </div>
                            <div class="col-md-3">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="description">
                                            <h2>@list[i].Description</h2>
                                        </div>


                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="username">
                                            <h3>Автор: @GetUserName(list[i].Id)</h3>
                                        </div>

                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        
                                            @if (User.Identity.IsAuthenticated)
                                            {
                                                <a class="like" value="@list[i].Id"> <span class="glyphicon glyphicon-heart" aria-hidden="true"></span><p class="like-status">@GetLikeState(list[i].Id)</p></a>
                                            }
                                            else
                                            {
                                                <p>Войдите чтобы оценивать изображения</p>
                                            }
                                        
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-3">
                                        @Html.Action("Comment", "Images", new  { imageId = list[i].Id})
                                      
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-9">
                                        
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="row">
                          
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }



}
               

