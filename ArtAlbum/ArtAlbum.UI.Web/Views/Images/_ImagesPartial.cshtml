                                        </div>


                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="social-panel">
                                            @if (User.Identity.IsAuthenticated)
                                            {
                                                <a class="like" value="@list[i].Id"> <span class="glyphicon glyphicon-heart" aria-hidden="true"></span><p class="like-status">@GetLikeState(list[i].Id)</p></a>
                                            }
                                            else
                                            {
                                                <p>Войдите чтобы оценивать изображения</p>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
