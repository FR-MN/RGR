@model ArtAlbum.UI.Web.Models.AuthVM

@{
    ViewBag.Title = "Вход";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
   



    <div class="container">
        <div class="container">
            <div class="registration">

                <div class="row">

                    <div class="col-md-offset-3 col-xs-12">

                        <div class="form-horizontal ">
                            <div id="header">


                                <div class="form-group">

                                    <h2>Авторизация</h2>

                                </div>
                            </div>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="container">
                                <div class="row">

                                   
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Nickname, htmlAttributes: new {})
                                       
                                            @Html.EditorFor(model => model.Nickname, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Nickname, "", new { @class = "text-danger" })
                                       
                                    </div>

                                </div>
                                <div class="row">

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Password, htmlAttributes: new {  })
                                        
                                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                        
                                    </div>

                                </div>
                                <div class="row">

                                    <div class="form-group">
                                        
                                            <input type="submit" value="Log in" class="btn btn-default" />
                                       
                                    </div>

                                </div>
                                <div class="row">

                                    <div class="form-group">
                                      
                                            <h4>Если у вас еще нет учетной записи</h4>
                                            <a class="btn btn-info" href="@Url.Action("Register", "Register")">Регистрация</a>
                                       
                                    </div>


                                    </div>
                               
                            </div>
















                        </div>
                    </div>
                </div>





            </div>
        </div>
  



     
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
