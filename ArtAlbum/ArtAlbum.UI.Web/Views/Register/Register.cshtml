@model ArtAlbum.UI.Web.Models.RegisterVM

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section authstyle{
    
<link href="~/Content/authstyle.css" rel="stylesheet" />
    }


@*свойства в BeginForm*@
